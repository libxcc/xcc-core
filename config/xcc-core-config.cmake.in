# Explain
message("${PROJECT_NAME}-config.cmake find")

# Find XCC_CORE_INCLUDE
find_path(XCC_CORE_INCLUDE ${PROJECT_NAME}/ HINTS ${CMAKE_INSTALL_PREFIX}/include/)

# Find XCC_CORE_LIBRARY
if (WIN32)
	find_path(XCC_CORE_LIBRARY ${PROJECT_NATIVE_ALIAS}.lib HINTS ${CMAKE_INSTALL_PREFIX}/lib/)
elseif (MINGW)
	find_path(XCC_CORE_LIBRARY ${PROJECT_NATIVE_ALIAS}.dll.a HINTS ${CMAKE_INSTALL_PREFIX}/lib/)
elseif (APPLE)
	find_path(XCC_CORE_LIBRARY lib${PROJECT_NATIVE_ALIAS}.dylib HINTS ${CMAKE_INSTALL_PREFIX}/lib/)
	find_path(XCC_CORE_LIBRARY lib${PROJECT_NATIVE_ALIAS}.a HINTS ${CMAKE_INSTALL_PREFIX}/lib/)
elseif (UNIX)
	find_path(XCC_CORE_LIBRARY lib${PROJECT_NATIVE_ALIAS}.so HINTS ${CMAKE_INSTALL_PREFIX}/lib/)
	find_path(XCC_CORE_LIBRARY lib${PROJECT_NATIVE_ALIAS}.a HINTS ${CMAKE_INSTALL_PREFIX}/lib/)
endif ()

# Setting
if(XCC_CORE_INCLUDE AND XCC_CORE_LIBRARY)
	set(XCC_CORE_FOUND TRUE)
endif()
